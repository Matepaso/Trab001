@model Trab001.Models.Produtos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleInputNome" asp-for="Nome" class="form-label">Nome</label>
                <input type="text" asp-for="Nome" class="form-control" id="exampleInputNome" aria-describedby="Nome">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputValor" asp-for="Valor" class="form-label">Nome</label>
                <input type="text" asp-for="Valor" class="form-control" id="exampleInputValor" aria-describedby="Valor">
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a role="button" class="btn btn-primary" asp-action="Index">Voltar</a>
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
