@model Trab001.Models.Usuario
@{
    ViewData["Title"] = "Index";
}


@{
    <h1>Cadastra-se agora</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Usuario" asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="exampleInputNome" asp-for="Nome" class="form-label">Nome</label>
                    <input type="text" asp-for="Nome" class="form-control" id="exampleInputNome" aria-describedby="Nome">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail" asp-for="Email" class="form-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" id="exampleInputEmail" aria-describedby="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputSenha" asp-for="Senha" class="form-label">Senha</label>
                    <input type="text" asp-for="Senha" class="form-control" id="exampleInputSenha" aria-describedby="Senha">
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmSenha" asp-for="ConfirmSenha" class="form-label">Confirme sua senha</label>
                    <input type="text" asp-for="ConfirmSenha" class="form-control" id="exampleInputConfirmSenha" aria-describedby="ConfirmSenha">
                    <span asp-validation-for="ConfirmSenha" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Voltar</a>
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>



    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

}
