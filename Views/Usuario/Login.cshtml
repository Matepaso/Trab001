@model Trab001.Models.Login
@{

}

@if (TempData["MensagemErro"] != null)
{
        <div class="alert alert-danger" role=" alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dimiss="alert" aria-label="Close">x</button>
        @TempData["MensagemErro"]
        </div>
}
<div class="row">
        <div class="col-md-4">
            <form asp-controller="Usuario" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="exampleInputEmail" asp-for="Email" class="form-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" id="exampleInputEmail" aria-describedby="Email">
                @Html.ValidationMessageFor(x => x.Email);
                </div>
                <div class="form-group">
                    <label for="exampleInputSenha" asp-for="Password" class="form-label">Senha</label>
                    <input type="text" asp-for="Password" class="form-control" id="exampleInputSenha" aria-describedby="Password">
                @Html.ValidationMessageFor(x => x.Password);
                </div>
                <br />
                <div class="form-group">
                    <a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Voltar</a>
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

            </form>
        </div>
    </div>






